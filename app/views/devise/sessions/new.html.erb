<style>
  html, body {
    height: 100%;
    margin-top: 0;
  }

  .navbar.navbar-default {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: none;
  }

  .banner {
    background: center no-repeat url(<%= image_path("banner.png") %>);
  }

  .login-form {
    background: center no-repeat url(<%= image_path("login.png") %>);
    background-color: transparent;

    padding: 90px 150px 100px 150px;
  }

  .panel.panel-default {
    background-color: transparent;
    border-width: 0;
    box-shadow: none;
  }

  .panel.panel-default .panel-heading {
    background-color: transparent;
    border-width: 0;
    padding: 0;
    text-align: center;
    color: white;
  }

  .panel.panel-default label {
    color: #eee;
  }

  .panel.panel-default a {
    color: #aaa;
  }

  .panel.panel-default input[type="submit"] {
    background-color: white;
    color: black;
  }
</style>

<div style="height: 100%; display: flex; justify-content: center; flex-direction: column;">
  <div>

    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 style="margin-bottom: -100px; font-weight: normal;">博物馆智慧服务设备综合管理平台</h1>
        </div>
      </div>
    </div>

    <div class="banner">
      <div class="container">
        <div class="row">
          <div class="col-md-offset-6 col-md-6">
            <div class="login-form">

              <div class="panel panel-default devise-bs">
                <div class="panel-heading">
                  <h4>用户登录</h4>
                </div>
                <div class="panel-body">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: 'form'}) do |f| %>
                      <div class="form-group">
                        <%= f.label :email %>
                        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
                      </div>
                      <div class="form-group">
                        <%= f.label :password %>
                        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
                      </div>
                      <% if devise_mapping.rememberable? %>
                          <div class="checkbox">
                            <%= f.label :remember_me do %>
                                <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'Remember me') %>
                            <% end %>
                          </div>
                      <% end %>
                      <%= render 'devise/shared/links' %>
                      <%= f.submit t('.sign_in', default: 'Sign in'), class: 'btn btn-primary btn-block' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container" style="margin-top: -70px;">
      <div class="row">
        <div class="col-md-2 t-a-c">
          <%= image_tag "moroes-app.png", style: "width: 100px;" %>
          <br>
          扫码下载手机应用
        </div>
        <div class="col-md-10">
          <p>
            <a href="http://dwz.smart-museum.cn/5">手机应用下载</a>
            <p class="text-muted">请使用浏览器打开下载链接</p>
          </p>
        </div>
      </div>
    </div>

  </div>
</div>
