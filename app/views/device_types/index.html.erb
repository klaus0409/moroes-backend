<h1>设备类型</h1>
<%# link_to '添加设备类型', new_device_type_path, class: 'btn btn-default' %>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>名称</th>
      <th>备注</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @device_types.each do |device_type| %>
      <tr>
        <td><%= device_type.id %></td>
        <td><%= device_type.name %></td>
        <td><%= device_type.note %></td>
        <td><%# link_to '详情', device_type %></td>
        <td><%# link_to '编辑', edit_device_type_path(device_type) %></td>
        <td><%# link_to '删除', device_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

